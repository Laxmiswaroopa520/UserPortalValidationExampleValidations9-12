@* Partial for delete confirmation *@
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3 border-0 shadow-sm">
            <!-- remove borders -->
            <div class="modal-header border-0">
                <!-- remove header border -->
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer border-0">
                <!-- remove footer border -->
                <a id="confirmDeleteBtn" class="btn btn-danger">Delete</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Optional: remove horizontal lines completely and add rounded corners */
    #deleteModal .modal-content {
        border-radius: 10px;
    }
</style>

<script>
    // open modal and set delete link
    function showDelete(url) {
        $('#confirmDeleteBtn').attr('href', url);
        var myModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        myModal.show();
    }
</script>
