@model UserPortalValdiationsDBContext.ViewModels.VerifyOtpViewModel

@{
    ViewBag.Title = "Verify OTP";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card p-4 shadow">
                <h4 class="text-center mb-3">OTP Verification</h4>

                <form asp-action="VerifyOtp" method="post">
                    <div class="mb-3">
                        <label class="form-label">Enter OTP</label>
                        <input asp-for="Otp" class="form-control" maxlength="6" />
                        <span asp-validation-for="Otp" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        Verify
                    </button>
                </form>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="text-danger mt-2">
                        Invalid or expired OTP. Please try again.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
