@model UserPortalValdiationsDBContext.ViewModels.RegisterViewModel

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded" style="max-width: 900px; margin:auto;">
        <div class="row g-0">

            <!-- LEFT IMAGE -->
            <div class="col-md-5 d-none d-md-block" style="background: linear-gradient(to bottom, #e0f7ff, #ffffff);">
                <img src="https://cdn.pixabay.com/photo/2022/05/24/04/38/study-7217599_640.jpg"
                     class="img-fluid h-100 p-3"
                     style="object-fit: cover; border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;" />
            </div>

            <!-- RIGHT FORM -->
            <div class="col-md-7 p-4">
                <h3 class="text-center mb-4 fw-bold" style="background: linear-gradient(to right, #0072ff, #00c6ff); -webkit-background-clip: text; color: transparent;">
                    Create Your Account
                </h3>

                <form asp-action="Register" method="post" autocomplete="off" >
                  
                    <!-- Username -->
                    <div class="mb-3">
                        <label class="form-label">Username *</label>
                        <input asp-for="Username"
                               class="form-control"
                               autocomplete="off" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-4 position-relative">

                        
                        <label asp-for="Email" class="form-label">Email <span style="color:black">*</span></label>

                        <div style="position: relative;">
                            <input asp-for="Email"
                                   class="form-control form-control-lg rounded-pill shadow-sm"
                                   id="emailInput"
                                   autocomplete="off" />

                            <!-- JS will insert 😊 or 😢 here -->
                            <span id="emailEmoji"
                                  style="position: absolute;
                     right: 15px;
                     top: 50%;
                     transform: translateY(-50%);
                     font-size: 26px;">
                            </span>
                        </div>

                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>




                    <!-- Password -->
                    <div class="mb-4 position-relative">
                        <label class="form-label">Password <span style="color:black">*</span></label>

                        <div style="position: relative;">
                            <input asp-for="Password"
                                   type="password"
                                   autocomplete="new-password"
                                   class="form-control form-control-lg rounded-pill shadow-sm"
                                   id="passwordInput" />

                            <span id="passwordEmoji"
                                  style="position: absolute; right: 15px; top: 50%;
                  transform: translateY(-50%); font-size: 26px; cursor: pointer;">
                            </span>
                        </div>

                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Age *</label>
                        <input asp-for="Age" class="form-control" type="number" min="1" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Gender *</label><br />
                        <input asp-for="Gender" type="radio" value="Male" /> Male
                        <input asp-for="Gender" type="radio" value="Female" class="ms-3" /> Female
                        <span asp-validation-for="Gender" class="text-danger d-block"></span>
                    </div>
                    <input asp-for="DateOfBirth"
                           type="date"
                           class="form-control"
                           max="@DateTime.Now.ToString("yyyy-MM-dd")"
                           value="@(Model.DateOfBirth == DateTime.MinValue ? DateTime.Today.ToString("yyyy-MM-dd") : Model.DateOfBirth.ToString("yyyy-MM-dd"))" />


                    <div class="mb-3">
                        <label class="form-label">Country *</label>
                        <select asp-for="Country" class="form-control">
                            <option value="">-- Select Country --</option>
                            <option>India</option>
                            <option>USA</option>
                            <option>UK</option>
                            <option>Australia</option>
                        </select>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Hobbies</label><br />
                        <input type="checkbox" name="Hobbies" value="Cricket" /> Cricket
                        <input type="checkbox" name="Hobbies" value="Music" class="ms-2" /> Music
                        <input type="checkbox" name="Hobbies" value="Travel" class="ms-2" /> Travel
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="AcceptTerms" class="form-check-input" />
                        <label class="form-check-label">I accept the Terms & Conditions *</label>
                    </div>

                    <button class="btn btn-primary w-100 rounded-pill">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/password-emoji.js"></script>
        <script src="~/js/email-emoji.js"></script>
    }
}



